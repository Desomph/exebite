<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Exebites demo</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Exebites demo</a>
            <div class="navbar-collapse collapse" id="collapsingNavbar1">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Narucivanje", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Istorija narudzbina", "About", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @Html.Partial("_LoginPartial")
                </ul>
                <div>
                    Credit
                </div>
               
            </div>
    </nav>


    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
